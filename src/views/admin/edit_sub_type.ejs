<%-include('includes/header') %>

    <div class="row">
        <div class="col-lg-12">
            <div class="white_card card_height_100 mb_30">
                <div class="white_card_header">
                    <div class="box_header m-0">
                        <div class="main-title">
                            <h3 class="m-0">Edit Sub Type</h3>
                        </div>
                    </div>
                </div>
                <div class="white_card_body">
                    <form action="/admin/edit_sub_type" method="post">
                        <input type="hidden" name="sub_type_id" value="<%=row._id%>">
                        <div class="form-row align-items-center">
                           
                            <div class="col-auto">
                                <label class="sr-only" for="inlineFormInputGroup">Type Name</label>
                                <div class="input-group mb-2">
                                    <select id="sub_types" class="form-control" name="type_id" required>
                                        <option value="">--- Select Type ---</option>

                                        <% var sel = "";
                                            var tempId = row.type_id;
                                        types.forEach(function(row2) { 
                                            sel = (row2._id == ""+tempId)?"selected":"";
                                           
                                        %>

                                        <option value="<%=row2._id%>" <%=sel%>><%=row2.type_name%></option>
                                        <% }); %> 
                                    </select>
                           
                                </div>

                            </div>
                            <div class="col-auto">
                                <label class="sr-only" for="inlineFormInputGroup">Sub Type Name</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">@</div>
                                    </div>
                                    <input type="text" name="sub_type_name" value="<%=row.sub_type_name%>" class="form-control" id="inlineFormInputGroup" placeholder="Enter Sub Type Name">
                                </div>
                            </div>
                            
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary mb-2">Save</button>
                            </div>
                        </div>
                    </form>
                
                
                </div>
            </div>
        </div>
    </div>
    
<%-include('includes/footer') %>