<%-include('includes/header') %>

    <div class="row">
        <div class="col-lg-12">
            <div class="white_card card_height_100 mb_30">
                <div class="white_card_header">
                    <div class="box_header m-0">
                        <div class="main-title">
                            <h3 class="m-0">Add Sub Type</h3>
                        </div>
                    </div>
                </div>
                <div class="white_card_body">
                    <form action="/admin/sub_types" method="post">
                        <div class="form-row align-items-center">
                           
                            <div class="col-auto">
                                <label class="sr-only" for="inlineFormInputGroup">Type Name</label>
                                <div class="input-group mb-2">
                                    <select id="sub_type" class="form-control" style="width: 100%;" name="type_id" required>
                                        <option value="">--- Select Type ---</option>
                                        <% types.forEach(function(row) { 
                            
                                        %>

                                        <option value="<%=row._id%>"><%=row.type_name%></option>
                                        <% }); %> 
                                    </select>
                                   
                                </div>
                            </div>
                            <div class="col-auto">
                                <label class="sr-only" for="inlineFormInputGroup">Sub Type Name</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text">+</div>
                                    </div>
                                    <input type="text" name="sub_type_name" class="form-control" id="inlineFormInputGroup" placeholder="Enter Sub Type Name">
                                </div>
                            </div>
                            
                            <div class="col-auto">
                                <button type="submit" class="btn btn-primary mb-2">Save</button>
                            </div>
                        </div>
                    </form>
                
                
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
           <div class="box box-success">
               <div class="box-header">Sub Types List</div>
               <div class="box-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Created On</th>
                                <th>Type Name</th>
                                <th>Sub Type Name</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% let count = 1; %>
                            <% list.forEach(function(row) { 
                               
                                %>
                                
                                <tr>
                                    <td><%=count++%></td>
                                    <td><%= new Date(row.created_on).toLocaleDateString() %></td>
                                    <td><%= row.type_id.type_name %></td> 
                                    <td><%= row.sub_type_name %></td>
                                    <td>
                                        <a href="/admin/edit_sub_type/<%=row._id%>" class="btn btn-success fa fa-edit"></a>
                                        <a href="/admin/delete_sub_type/<%=row._id%>" class="btn btn-danger fa fa-trash" onclick="return confirm('Are you sure to Delete this Sub Type ?')"></a>
                                    </td>
                                
                                </tr>
                             <% }); %> 
                        </tbody>
                    </table>
                    
                </div>
               </div>
           </div>
        </div>
    </div>
<%-include('includes/footer') %>
<script>
    $('table').dataTable();
</script>