<%-include('../admin/includes/header') %>

    <div class="row">
        <div class="box box-success">
            <div class="box-header"><i class="fa fa-plus"></i> Edit Vendor</div>
            <div class="box-body">
                <form action="/vendors/update_data" class="row" method="post">
                    <input type="hidden" name="_id" value="<%=row._id%>">
                       <div class="form-group col-md-4 col-lg-4 col-sm-12 col-xs-12">
                           <label for="">Name</label>
                           <input type="text" class="form-control" name="vendor_name" value="<%=row.vendor_name%>" placeholder="Enter Vendor Name" required>
                       </div>              
                       <div class="form-group col-md-4 col-lg-4 col-sm-12 col-xs-12">
                           <label for="">EMail ID</label>
                           <input type="text" class="form-control" placeholder="Enter EMail ID"  value="<%=row.vendor_email%>" name="vendor_email" required>
                       </div>
                       <div class="form-group col-md-4 col-lg-4 col-sm-12 col-xs-12">
                           <label for="">Mobile No.</label>
                           <input type="text" class="form-control" name="vendor_mobile"  value="<%=row.vendor_mobile%>" placeholder="Enter Mobile No." required>
                       </div>
                       <div class="form-group col-md-12 col-lg-12 col-xs-12 col-sm-12">
                            <label for="">Address</label>
                            <input type="text" name="vendor_address" class="form-control"  value="<%=row.vendor_address%>" placeholder="Enter Address" id="" required>
                       </div>
                       <div class="form-group col-md-12 col-lg-12 col-xs-12 col-sm-12">
                           <button class="btn btn-success" type="submit"><i class="fa fa-save"></i> Save</button>
                       </div>
                </form>
            </div>
        </div>
    </div>

<%-include('../admin/includes/footer') %>
